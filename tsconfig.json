{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": ["dom","dom.iterable","es6","scripthost"],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "isolatedModules": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["./src/@types", "./node_modules/types", "./node_modules/@types"],
    "esModuleInterop": true
  },
  "include": ["./src/**/*", "index.d.ts", "./src/png.d.ts", "./node_modules/redux-persist/types"],
  "exclude": ["node_modules"]
}
